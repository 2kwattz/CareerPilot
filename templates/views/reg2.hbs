  {{!-- Registration section --}}

  <div class="reg-container">

    {{!-- Leftmost image section --}}

    <div class="reg-left">
      <div class="gradient-overlay">

        <img src="/img/logos/logo-white.png" height="20%" width="25%" alt="CareerPilot Logo">


        <h2> When Dreams Take Flight <br> Start Your Career As A Skilled Pilot </h2>
