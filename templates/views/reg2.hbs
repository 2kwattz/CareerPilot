        <h3> Or Sign Up with an Email </h3>

        <div class="registration-form">


          <form class="form-control" method="POST" action="/registration">

            <div class="reg-sections" id="reg-sec-1">
              {{!-- Name, Email & Password --}}

              <input type="text" class="scholarshipKeyword" name="fullName" placeholder="Full Name" required><br>
              <input type="email" class="scholarshipKeyword" name="email" placeholder="Email address" required><br>
              <input type="password" class="scholarshipKeyword" name="password" placeholder="Password" required><br>
              <input type="password" class="scholarshipKeyword" name="confirmPassword" placeholder="Confirm Password"
                required><br>

              {{!-- Gender --}}
              <label class="radio gender">

                <input type="radio" name="gender" value="male" checked>
                <span> Male </span>
              </label>

              <label class="radio gender">
                <input type="radio" name="gender" value="female">
                <span> Female </span>
              </label><br>



            </div>

            <div class="reg-sections" id="reg-sec-2">

              <input type="text" class="scholarshipKeyword" name="age" placeholder="Age" required><br>

              <input type="text" placeholder="Choose City" name="city">
              <input type="text" placeholder="Choose State" name="state">
              <select class="reg-select" name="country-sel" id="country">
                <option value=""> Country </option>
              </select>
              <input type="text" placeholder="Enter Pincode" required name="Pincode">

            </div>

            <div class="reg-sections" id="reg-sec-3">

              <input type="text" placeholder="Enter your college name" required name="collegeName">
              <input type="text" class="form-control" placeholder="Enter your Branch" required name="collegeBranch">
              <input type="text" placeholder="Enter your course" required name="collegeCourse">
              <textarea rows="1" cols="3" id="interests" name="interests"> </textarea>
              <br1>

            </div>

            <div class="reg-sections" id="reg-sec-4">

              <select class="reg-select" name="secQuestion" required>
                <option value="" disabled selected>Choose your security question</option>
                <option value="What is your mother's maiden name?"> What is your mother's maiden name? </option>
